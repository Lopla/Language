args = Lp.Args()
quitFlag = 0

Setup.Platform(0)
PoorForm.Init()


FormsMain.Setup()
FormsActions.Setup()
FormsStats.Setup()

PoorForm.Flush()

function Main.Quit(){
	quitFlag  = 1
}


function Main.Loop(){

	while(quitFlag == 1){

		e = Draw.WaitForEvent()

		id =  PoorForm.HandleEvent(e)

		if(id!=-1){
			FormsMain.HandleClick(id)
			FormActions.HandleClick(id)
		}

		FormsStats.Update(e)

		PoorForm.Flush()
		Draw.Flush()
	}

}

IO.WriteLine(Generator.Name())

