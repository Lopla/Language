{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Lopla.Tests/Lopla.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build-loplac",
            "command": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Professional/MSBuild/Current/Bin/msbuild.exe",
            "type": "process",
            "args": [
                "-m",
                "${workspaceFolder}/Language.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build",
            "command": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Professional/MSBuild/Current/Bin/msbuild.exe",
            "type": "process",
            "args": [
                "-m",
                "${workspaceFolder}/Language.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "run-loplac",
            "type": "shell",
            "command": "${workspaceFolder}/Lopla.WinConsole/bin/Debug/loplac.exe",
            "args": [
                "${workspaceFolder}/Examples/Tests"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "clear": true,
                "showReuseMessage": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "copy-loplac-to-plugin",
            "detail": "Copies loplac.exe to plugin folder, after that you can relase the plugin.`",
            "command": "Copy-Item",
            "dependsOn": ["build-loplad"],
            "type": "shell",
            "args": [
                "-Recurse",
                "-force",
                "${workspaceFolder}/Lopla.WinConsole/bin/Debug/*",
                "${workspaceFolder}/Lopla.VSCode/language-plugin/resources/loplac"
            ],
            "problemMatcher": []
        },
        {
            "label":"debug-extension",
            "type": "npm",
            "script": "watch",
            "path": "Lopla.VSCode/language-plugin/",
            "problemMatcher": []
        },
        {
            "label":"package-extension",
            "type": "shell",
            "options":{
                "cwd": "Lopla.VSCode/language-plugin/"
            },
            "command":"vsce package",
            "problemMatcher": []
        }
    ]
}