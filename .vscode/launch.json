{
    // Use IntelliSense to find out which attributes exist for C# debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug lopla console core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-loplac-core",
            "program": "${workspaceFolder}/Lopla.WinConsole.Core/bin/Debug/netcoreapp3.0/Lopla.Console.dll",
            "args": [
                "${workspaceFolder}/Examples/Tests"
                //"${workspaceFolder}/Examples/City"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Lopla win console",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "build-loplac",
            "program": "loplac.exe",
            "args": [
                "${workspaceFolder}/Examples/Tests"
            ],
            "console": "internalConsole",
            "cwd": "${workspaceFolder}/Lopla.WinConsole/bin/Debug/",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Lopla console",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-loplac",
            "program": "${workspaceFolder}/Lopla.Console/bin/Debug/netcoreapp2.2/LoplaC.dll",
            "args": [
                "${workspaceFolder}/Examples/Tests"
            ],
            "cwd": "${workspaceFolder}/Lopla.Console",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "VSC extenstion",
            "type": "extensionHost",
            "request": "launch",
            //"preLaunchTask": "debug-extension",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Lopla.VSCode/language-plugin"
            ]
        }
    ]
}